<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head'); %>
</head>

<body>

    <header>
        <%- include('partials/header'); %>
            <div class="header-div">
                <img src="images/v788-mynt-84.jpg" class="header-image" alt="Welcome to NoteFlex!">
            </div>
    </header>

    <div class="container-fluid m-5">
        <table class="p-5 mx-auto">
            <th>All Our Notes</th>
            <tr>
                <% if (typeof notes !="undefined" ){ notes.forEach(note=> { %>

                    <form action="/document" method="POST">
                        <input type="hidden" name="pathname" value="<%=note.filePath%>">

                        <td>
                            <span>
                                <%= note.filePath %>
                            </span>
                            <br>
                            <button type="submit" class="btn btn-sm btn-outline-info my-2">Download</button>
                        </td>
            </tr>
            </form>
            <% }); }else{ %>
                <p>There are no notes here!
                <p>
                    <% } %>
        </table>
    </div>

    <footer>
        <%- include('partials/footer'); %>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous"></script>
    <!-- Importar o JS -->
    <script src="javascripts/main.js"></script>
</body>

</html>